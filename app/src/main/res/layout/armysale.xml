<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#99c7a8"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="병사할인"
                android:textColor="#4D4D33"
                android:textSize="30dp"
                android:fontFamily="@font/euljiro"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <View
            android:layout_width="230dp"
            android:layout_height="2.5dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:background="#00000000" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/army_nachim"/>

    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="2.5dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"
        android:background="#4D4D33" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <AutoCompleteTextView
            android:id="@+id/autoComplete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:paddingStart="15dp"
            android:layout_weight="2"
            android:completionThreshold="1"
            android:hint="검색할 항목을 입력하세요."
            android:textColorHint="#a0a0a0"
            android:background="@drawable/list_shape_dictionary" />

        <Button
            android:id="@+id/edtBtn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="@drawable/login_btn"
            android:text="검색"
            android:textColor="#ebe8e8"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/Armysalelistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/list_shape_dictionary"
        android:divider="#70a16a"
        android:dividerHeight="1dp"
        android:fastScrollEnabled="true"/>

</LinearLayout>