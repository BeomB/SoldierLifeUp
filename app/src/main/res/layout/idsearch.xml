<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99c7a8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/euljiro"
            android:background="@drawable/list_shape_dictionary"
            android:text="ID 찾기"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40dp"/>

    </LinearLayout>
    <!--/////////////////////////////////////////////////////-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/list_shape_dictionary"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idtext"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/deliver_jua"
                android:gravity="center"
                android:text="이름 :"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/idsearch_et_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:layout_weight="2"
                android:background="@drawable/list_shape_dictionary"
                android:completionThreshold="1"
                android:paddingStart="20dp"
                android:hint="이름을 입력하세요."
                android:textColorHint="#a0a0a0" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pwtext"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/deliver_jua"
                android:gravity="center"
                android:text="H.P :"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/idsearch_et_phone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:layout_weight="2"
                android:background="@drawable/list_shape_dictionary"
                android:completionThreshold="1"
                android:textSize="14dp"
                android:hint="핸드폰 번호를 입력하세요.(-제외)"
                android:paddingStart="20dp"
                android:textColorHint="#a0a0a0" />

        </LinearLayout>

        <Button
            android:id="@+id/idsearchbtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/login_btn"
            android:textColor="#ebe8e8"
            android:text="ID 찾기"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/list_shape_dictionary"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/idsearch_txt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="고객님의 ID : "
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right">

        <Button
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#00000000"
            android:text="이전 화면으로 >"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#454545"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"/>

    </LinearLayout>
</LinearLayout>