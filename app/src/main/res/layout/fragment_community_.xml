<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:dividerHeight="10dp"
            android:divider="#00000000"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:id="@+id/listview"></ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chattingname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="채팅"
            android:textColor="#8c8989"/>
        <TextView
            android:id="@+id/chattingname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="채팅"
            android:textColor="#8c8989"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/edtTitleText"
            android:background="@drawable/shape_of_chatting_edt"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:hint="내용을 입력해주세요."/>

        <Button
            android:background="@drawable/shape_of_chatting_btn"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:clickable="false"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_weight="1.5"
            android:padding="5dp"
            android:text="전 송"
            android:textSize="13dp"
            android:id="@+id/btn1"/>


    </LinearLayout>
</LinearLayout>