<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99c7a8"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="군 복지시설 안내"
                android:textColor="#4D4D33"
                android:textSize="30dp"
                android:fontFamily="@font/euljiro"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <View
            android:layout_width="105dp"
            android:layout_height="2.5dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:background="#00000000" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/army_hat"/>

    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="2.5dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"
        android:background="#4D4D33" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/list_shape_dictionary"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tFacilitytxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="12dp"
                            android:fontFamily="@font/nanum"
                            android:textStyle="bold"
                            android:text="시설명"
                            android:textColor="#415438"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="3dp"
                            android:background="#80415438" />

                        <TextView
                            android:id="@+id/tFacility"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="#000000"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/list_shape_dictionary"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tAddresstxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="12dp"
                            android:fontFamily="@font/nanum"
                            android:textStyle="bold"
                            android:text="주소"
                            android:textColor="#415438"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="3dp"
                            android:background="#80415438" />

                        <TextView
                            android:id="@+id/tAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="#000000"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/list_shape_dictionary"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tDivisiontxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="12dp"
                            android:fontFamily="@font/nanum"
                            android:textStyle="bold"
                            android:text="구분"
                            android:textAlignment="center"
                            android:textColor="#415438"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="3dp"
                            android:background="#80415438" />

                        <TextView
                            android:id="@+id/tDivision"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/list_shape_dictionary"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tTeltxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="12dp"
                            android:fontFamily="@font/nanum"
                            android:textStyle="bold"
                            android:text="연락처"
                            android:textAlignment="center"
                            android:textColor="#415438"
                            android:textSize="18dp"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="3dp"
                            android:background="#80415438" />

                        <TextView
                            android:id="@+id/tTel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:clickable="true"
                            android:autoLink="phone"
                            android:textStyle="bold"
                            android:textColorLink="#786200EE"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="330dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="20dp">

                    <fragment
                        android:id="@+id/map_library2"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="330dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        tools:context=".ArmyServiceInformation" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>