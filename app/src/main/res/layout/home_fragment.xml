<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/list_shape_dictionary"
        android:gravity="center"
        >

        <ViewFlipper
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewFlipperfirst">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/countrydefensenews"></ImageView>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/armynews"></ImageView>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/navymarinenews"></ImageView>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/airforcenews"></ImageView>

        </ViewFlipper>

        <ViewFlipper
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewFlippersecond">

            <TextView
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="국방부 소식"
                android:fontFamily="@font/s"
                android:id="@+id/mainarmytxt"
                />
            <TextView
                android:fontFamily="@font/s"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="육군 소식"
                android:gravity="center"
                android:id="@+id/armytxt"
                />

            <TextView
                android:fontFamily="@font/s"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="해군 소식"
                android:gravity="center"
                android:id="@+id/marintxt"
                />

            <TextView
                android:fontFamily="@font/s"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="공군 소식"
                android:gravity="center"
                android:id="@+id/policetxt"
                />

        </ViewFlipper>

        <ViewFlipper
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewFlipperthird">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/countrydefensenews"></ImageView>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/armynews"></ImageView>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/navymarinenews"></ImageView>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/airforcenews"></ImageView>

        </ViewFlipper>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dictionary"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/book"
                android:background="#00000000"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/hotel"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/hotel"
                android:background="#00000000"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dictionarytxt"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="@font/s"
                android:text="군 용어사전"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/servicetxt"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="@font/s"
                android:text="군 복지시설"
                android:textColor="#000000"
                android:textSize="20sp"/>

        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="2.5dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="20dp"
            android:background="#755950" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/information"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/information"
                android:background="#00000000"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/train"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/train"
                android:background="#00000000"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/saletxt"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="병사할인"
                android:textColor="#000000"
                android:fontFamily="@font/s"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/Tmotxt"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="TMO"
                android:textColor="#000000"
                android:fontFamily="@font/s"
                android:textSize="20sp"/>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>