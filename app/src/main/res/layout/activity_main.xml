<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#99c7a8"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="솔져라이프업"
            android:textSize="30sp"
            android:fontFamily="@font/euljiro"
            android:gravity="center_horizontal"
            android:textColor="#4D4D33"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/home_frag"
        android:layout_width="380dp"
        android:layout_height="400dp"
        android:layout_weight="1"
        android:backgroundTint="#80f5edd3"
        android:background="@drawable/list_shape_main">


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight=".5">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomnavi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_alignParentBottom="true"
            app:itemIconPadding="@dimen/space24"
            app:layout_insetEdge="bottom"
            app:itemIconTint="#99c7a8"
            app:itemTextColor="@drawable/item_color"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu_bottomnavigationview"
            app:itemIconSize="50dp">
        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>



</LinearLayout>