<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99c7a8"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:fontFamily="@font/euljiro"
            android:text="ID/PW 찾기"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/list_shape_dictionary"
                android:orientation="vertical"
                android:padding="20dp">

                <Button
                    android:id="@+id/id_search_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:background="@drawable/login_btn"
                    android:text="ID찾기"
                    android:textSize="20dp"
                    android:textColor="#ebe8e8"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/pw_search_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="100dp"
                    android:background="@drawable/login_btn"
                    android:text="PW찾기"
                    android:textSize="20dp"
                    android:textColor="#ebe8e8"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <!--/////////////////////////////////////////////////////-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right">
        <Button
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#00000000"
            android:text="로그인 화면으로 >"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#454545"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
</LinearLayout>